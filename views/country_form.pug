extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Country:
      input#name.form-control(type='text', placeholder='Belgium, Germany, etc' name='name' value=(undefined===country ? '' : country.name))
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg