extends layout

block content

  h1 Category: #{category.name}
  
  div(style='margin-left:20px;margin-top:20px')

    h4 Sandwiches
    
    dl
    each sandwich in category_sandwiches
      dt 
        a(href= '/sandwiches/' + sandwich.url) #{sandwich.name}
      dd #{sandwich.description}

    else
      p This category has no sandwiches.
      
  hr
  p
    a(href=category.url+'/delete') Delete category
  p
    a(href=category.url+'/update') Update category