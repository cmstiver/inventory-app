extends layout

block content
  h1.text-center.mt-3.text-white= title

  if country_list
  
    div.d-flex.justify-content-center.text-center
      div.card.mt-3(style="width: 50rem;")
        ul.card-body
          div
            each country in country_list
              li.nav-link
                a(href=country.url) #{country.name} 

  else
    li There are no countries.