extends layout

block content

  h1.text-center.mt-3.text-white #{country.name}

  div.d-flex.justify-content-center
    div.card.mt-3(style="width: 50rem;")
      div.card-body
        each sandwich in country_sandwiches
            dt
              a(href='/sandwiches/' + sandwich.url) #{sandwich.name}
            dd #{sandwich.description}
        div.d-flex.justify-content-around
          a.btn.btn-info(href=country.url+'/update') Update country
          a.btn.btn-danger(href=country.url+'/delete') Delete country