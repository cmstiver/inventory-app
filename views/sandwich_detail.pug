extends layout

block content
  h1.text-center.mt-3.text-white #{sandwich.name}

  div.d-flex.justify-content-center
    div.card.mt-3(style="width: 50rem;")
      img(src=`${sandwich.image}`, alt="A lot of flags.")
      div.card-body
        h5.card-title #{sandwich.name}
        p.card-text #{sandwich.country.name}
        p.card-text #{sandwich.price}
        p.card-text #{sandwich.description}
        div.d-flex.justify-content-around
          a.btn.btn-info(href=sandwich.url+'/update') Update Sandwich
          a.btn.btn-danger(href=sandwich.url+'/delete') Delete Sandwich
          